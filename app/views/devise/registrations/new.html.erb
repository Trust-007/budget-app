<div class='move_down'>
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: '') do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="input_label">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: :name %>
    </div>

    <div class="input_label">
      <%= f.email_field :email, autocomplete: "email", placeholder: :email %>
    </div>

    <div class="input_label">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{:password}" %></br>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    </div>

    <div class="input_label">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: :password_confirmation %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'add_btn' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
