<% if @category.errors.any? %>
 <div class='errors'>
    <h2>The following errors must be resolved</h2>
    <ul>
    <% @category.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div> 
<% end %>
<%= form_with model: @category, url: categories_path, data: { turbo: false }, method: :post do |f| %>

<div class='input_contain'>
  <div class='input_label'>
    <%= f.label :name %> 
    <%= f.text_field :name %>
  </div>

  <div class='input_label'>
    <%= f.label :icon, 'Icon link' %> 
    <%= f.url_field :icon %>
  </div>
  
  <%= f.submit( class: "food_add_btn") %> 
</div>

<% end %>